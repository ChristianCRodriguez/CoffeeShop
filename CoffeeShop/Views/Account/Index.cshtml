@{
    ViewData["Title"] = "Register A New Customer";
}
    <head>
        <script src="jquery-3.4.1.min.js"></script>
    </head>
<h1>Index</h1>
<form asp-controller="Home" asp-action="RegisterCustomer" id="registerUser">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label>First Name</label>
                <input type="text" required placeholder="First Name" class="form-control" name="FirstName" />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" required placeholder="Last Name" class="form-control" name="LastName" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label>Email</label>
                <input type="email" required placeholder="Email" class="form-control" name="Email" />
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="true" name="EmailOptedIn" />
                <label class="form-check-label">
                    I would like to receive promotional emails!
                </label>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label>Mobile Phone</label>
                <input type="tel" placeholder="000-000-0000" class="form-control" name="Phone" />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label>Username</label>
                <input type="text" required placeholder="Username" class="form-control" name="Username" />
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" required placeholder="Password" class="form-control" name="Password" id="password" />
            </div>
            <div class="form-group">
                <label>Verify Password</label>
                <input type="password" required placeholder="Re-type Password" class="form-control" id="verifyPassword" />
            </div>
        </div>
    </div>
    <input type="button" class="btn btn-primary" value="Submit" onclick="SubmitForm()"/>
</form>


<script>
    function SubmitForm(){
        var ogPass = document.querySelector("#password").value;
        var unOgPass = document.querySelector("#verifyPassword").value;
        if (ogPass != unOgPass) {
            alert("Passwords do not match, please try again.");
        } else {
            document.querySelector("#registerUser").submit();
        }
    }
</script>